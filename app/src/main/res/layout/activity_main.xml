<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.esports.vishal.esportsscoreapplication.MainActivity"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_end_color"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_cs"
        style="@style/CardViewStyle"
        android:layout_width="215dp"
        android:layout_height="288dp"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:layout_gravity="left">

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_white_rounded_rect"
            android:orientation="vertical"
            android:weightSum="1">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageview_cs"
                android:layout_width="186dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/csgo"
                app:riv_corner_radius_bottom_left="0dp"
                app:riv_corner_radius_bottom_right="0dp"
                app:riv_corner_radius_top_left="@dimen/card_corner_radius"
                app:riv_corner_radius_top_right="@dimen/card_corner_radius" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.61"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Counter Strike"
                    android:textColor="@color/grey_700"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/grey_500"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="247dp"
        android:layout_height="292dp"
        tools:context="com.esports.vishal.esportsscoreapplication.MainActivity"
        android:weightSum="1"
        android:gravity="right">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_lol"
            style="@style/CardViewStyle"
            android:layout_width="221dp"
            android:layout_height="288dp"
            android:layout_gravity="top"
            android:paddingLeft="3dp"
            android:paddingTop="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_white_rounded_rect"
                android:orientation="vertical"
                android:weightSum="1">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageview_lol"
                    android:layout_width="208dp"
                    android:layout_height="143dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lol"
                    app:riv_corner_radius_bottom_left="0dp"
                    app:riv_corner_radius_bottom_right="0dp"
                    app:riv_corner_radius_top_left="@dimen/card_corner_radius"
                    app:riv_corner_radius_top_right="@dimen/card_corner_radius"
                    android:layout_weight="0.69" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="0.61"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.15"
                        android:text="League Of Legends"
                        android:textColor="@color/grey_700"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_500"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
