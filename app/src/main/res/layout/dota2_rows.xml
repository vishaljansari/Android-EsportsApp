<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view="http://schemas.Android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    card_view:contentPadding="60dp"
    android:backgroundTint="@color/cardview_light_background"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="6dp"
    card_view:cardMaxElevation="5dp"
    card_view:cardElevation="5dp"
    tools:context="com.esports.vishal.esportsscoreapplication.DOTA2.Dota2ScoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seasonname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="left"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_1_abbreviation"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/team_2_name"
            android:layout_toStartOf="@+id/team_2_abbreviation"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_2_abbreviation"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/team_2_name"
            android:layout_below="@+id/team_2_name"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_2_name"
            android:layout_width="186dp"
            android:layout_height="148dp"
            android:layout_alignBottom="@+id/team_1_name"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/seasonname"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="top"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/team_1_name"
            android:layout_width="179dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seasonname"
            android:gravity="top"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/team_1_home_score_period"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/team_1_abbreviation"
            android:layout_toStartOf="@+id/team_2_abbreviation" />

        <TextView
            android:id="@+id/team_2_home_score_period"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignBaseline="@+id/team_1_home_score_period"
            android:layout_alignBottom="@+id/team_1_home_score_period"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/team_1_abbreviation" />

        <TextView
            android:id="@+id/team_1_home_score"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/team_1_home_score_period"
            android:layout_toStartOf="@+id/team_2_home_score_period" />

        <TextView
            android:id="@+id/team_2_home_score"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignBaseline="@+id/team_1_home_score"
            android:layout_alignBottom="@+id/team_1_home_score"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/team_1_home_score_period" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
