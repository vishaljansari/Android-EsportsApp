<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/seasonname"
                android:layout_width="295dp"
                android:layout_height="46dp"
                android:paddingTop="15dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/tweeter_button"
                android:layout_width="42dp"
                android:layout_height="50dp"
                android:background="@drawable/twitter"
                android:layout_weight="0.09" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="387dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/team_1_abbreviation"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_alignBottom="@+id/team_2_home_score_period"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/team_1_qualifier"
                android:textAllCaps="true"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/team_2_home_score_period"
                android:layout_alignEnd="@+id/team_2_home_score_period"
                android:layout_marginTop="18dp" />

            <TextView
                android:id="@+id/team_2_qualifier"
                android:textAllCaps="true"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/team_1_qualifier"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="@dimen/imagesizevs"
                android:layout_height="@dimen/imagesizevs"
                android:src="@drawable/versus"
                android:layout_marginTop="77dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/team_2_abbreviation"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_weight="0.16"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/team_1_abbreviation"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/team_2_home_score_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toEndOf="@+id/team_1_abbreviation" />

            <TextView
                android:id="@+id/team_1_home_score_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toStartOf="@+id/team_2_abbreviation" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

